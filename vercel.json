{
    "version": 2,
    "builds": [
      {
        "src": "frontend/next.config.js",
        "use": "@vercel/next"
      },
      {
        "src": "backend/server.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/server.py"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/$1"
      }
    ]
  }
  