{
  "version": 2,
  "builds": [
    {
      "src": "./next.config.js",
      "use": "@vercel/next"
    },
    {
      "src": "../backend/server.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "../backend/server.py"
    },
    {
      "src": "/(.*)",
      "dest": "./$1"
    }
  ]
}
